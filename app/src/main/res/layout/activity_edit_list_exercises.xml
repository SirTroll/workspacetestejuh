<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context="com.sirtprojects.testejuh.Activities.EditListExercisesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_view_edit_list_exercises"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Descrição"
            android:padding="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_list_view"
        android:layout_width="match_parent"
        android:layout_weight="0.90"
        android:layout_height="0dp">

        <ListView
            android:id="@+id/expandable_list_view_edit_list_exercises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#000000"
            android:dividerHeight="1dp"
            android:choiceMode="multipleChoice">
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.10"
        android:layout_height="0dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_edit_list_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Voltar"
            android:background="@drawable/rounded_button_green"/>

    </LinearLayout>


</LinearLayout>