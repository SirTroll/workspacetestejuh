<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:background="#fff"
    tools:context="com.sirtprojects.testejuh.Activities.EditTrainingActivity">

    <LinearLayout
        android:id="@+id/linear_layout_edit_training_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/image_button_edit_training_cone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_eject"/>

        <ImageButton
            android:id="@+id/image_button_edit_training_arc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_arch"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/image_button_edit_training_stairs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_stairs"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linear_layout_edit_training_top"
        android:id="@+id/linear_layout_edit_training_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cardview"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_edit_training_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_edit_training_finalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/cancel"
            android:background="@drawable/rounded_button_light_red"/>

        <Button
            android:id="@+id/button_edit_training_cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/finalizar"
            android:background="@drawable/rounded_button_green"/>

    </LinearLayout>

</RelativeLayout>